# Docker Compose Environment Variables

# Database Configuration (external PostgreSQL)
# Use host.docker.internal to connect from Docker containers to host machine
DATABASE_URL=postgresql://user:password@host.docker.internal:5432/role_distribution

# CORS Origins for backend (JSON array format required by pydantic-settings)
# nginx proxies frontend requests, so backend sees requests from nginx
CORS_ORIGINS=["http://localhost"]
